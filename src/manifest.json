{
	"name": "Validity",
	"version": "@version@",/*!debug*/
	"version": "0.0.0",/*gubed!*/
	"description": "Click the icon in the address bar or press Ctrl+Alt+V to validate the current page.  Results of the validation can be seen in the console tab of Chrome's developer tools.",
    "icons": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
    },
	"permissions": [
		"http://*/*",
		"https://*/*",
		"tabs"
	],
	"content_scripts": [{
		"matches": ["*://*/*"],
		"js": ["validity.js"]
	}],
	"background_page": "background.html",
	"page_action": {
		"default_icon": "img/html_valid.png",
		"default_title": "Validate Documemt (Alt+Shift+V)"
	},
	"options_page": "options.html"
}